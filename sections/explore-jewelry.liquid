<div
  class="explore-jewelry">
  <div
    class="text-content">
    <h3>{{ section.settings.title }}</h3>
    <p>{{ section.settings.text }}</p>
    <button>{{ section.settings.button_label }}</button>
  </div>
  <div
    class="products">
    {% for product in section.settings.products %}
      {% render 'jewelry-product'
       , image: product.featured_image
       , name: product.title
       , price: product.price %}
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Explore Jewelry",
    "tag": "section",
    "class": "explore_jewelry",
    "settings": [
      {
        "type": "collection",
        "id": "product",
        "label": "Products (Jewelry)"
      }, {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "New Compass, Old love"
      }, {
        "type": "text",
        "id": "text",
        "label": "Text",
        "default": "The new handpicked Compass lineup is exclusively designed for you with one simple aimâ€“to guide you to inspire and express your individuality while maintaining the style quotient"
      }, {
        "type": "text",
        "id": "button_label",
        "label": "Button label",
        "default": "Explore Now"
      }
    ]
  }
{% endschema %}